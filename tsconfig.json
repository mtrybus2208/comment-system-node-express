{
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "pretty": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*spec.ts"]
}
